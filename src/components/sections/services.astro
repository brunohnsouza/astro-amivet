---
import { CircleCheckBig } from "lucide-react";
import { Badge } from "../ui/badge";
import { Button } from "../ui/button";

const badgeContent = "Serviços";
const titleContent = "Assista ao vídeo e veja em detalhes os nossos serviços";
const listServices = [
  "Consultas de Bem-Estar",
  "Vacinação e Desparasitação",
  "Atendimento Especializado em Nutrição",
  "Cirurgia e Procedimentos Médicos",
];
const buttonText = "Marcar consulta";

const videoSrc = "./sections/services/video.mp4";
---

<div
  class="mx-auto max-w-6xl px-4 grid items-start grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-16"
>
  <div class="flex flex-col items-start justify-center gap-4">
    <Badge
      className="max-w-max font-bold text-primary uppercase bg-background text-xs shadow-md tracking-wide"
      role="status"
      variant="outline">{badgeContent}</Badge
    >

    <h2
      class="text-3xl sm:text-4xl capitalize text-foreground font-extrabold tracking-wide"
    >
      {titleContent}
    </h2>

    <ul class="flex flex-col justify-start w-full gap-y-4 my-4">
      {
        listServices.map((service) => (
          <li class="flex items-center gap-2">
            <CircleCheckBig
              className="size-5 text-primary shrink-0"
              aria-hidden="true"
            />
            <span class="text-secondary-foreground/70 tracking-wide">
              {service}
            </span>
          </li>
        ))
      }
    </ul>

    <a href="#contact" class="w-full">
      <Button
        className="capitalize font-semibold text-base w-full tracking-wide"
      >
        {buttonText}
      </Button>
    </a>
  </div>

  <!-- <iframe
        class="rounded-lg border aspect-video min-h-80 w-full object-cover"
        src=""
        title=""
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
        allowfullscreen
    ></iframe> -->

  <video
    controls
    class="rounded-lg aspect-video border min-h-80 w-full object-cover"
  >
    <source src={videoSrc} type="video/mp4" />
    <!-- Outros formatos de vídeo podem ser adicionados aqui -->
    Desculpe, o seu navegador não suporta vídeos incorporados, mas você pode
    <a href={videoSrc}>baixá-lo</a>
    e assistir pelo seu reprodutor de mídia favorito!
  </video>
</div>
