---
import "@/styles/globals.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pt-BR">
  <head>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&display=swap"
      rel="stylesheet"
    />
    <meta charset="UTF-8" />
    <meta name="author" content="Bruno Souza" />
    <meta
      name="description"
      content="Amivet: Cuidado completo para seus animais de estimação. Consultas, vacinação, cirurgia e atendimento de emergência com amor e expertise. Agende agora e cuide do seu pet com confiança."
    />
    <meta
      name="keywords"
      content="Clínica veterinária, Cuidados para animais de estimação, Consultas veterinárias, Consultas veterinárias, Bem-estar animal"
    />
    <link rel="shortcut icon" href="./logo.svg" type="image/x-icon" />
    <meta name="robots" content="index, follow" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
